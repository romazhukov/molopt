{
    "$schema": "http://json-schema.org/draft-07/schema",
    "name": "bse_basis_set_references",
    "version": "0.1",
    "url": "TODO",
    "description": "Citation data for a collection of basis sets",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "molssi_bse_schema"
    ],
    "properties":
    {
        "molssi_bse_schema": {
            "description": "Info about which schema the file follows",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "schema_type",
                "schema_version"
            ],
            "properties": {
                "schema_type" : {
                    "description": "What type of BSE JSON file this is",
                    "type": "string",
                    "enum": [ "references" ]
                },
                "schema_version": {
                    "description": "Version of the BSE basis set references schema being used",
                    "type": "string"
                }
            }
        }
    },
    "patternProperties": {
        "^[a-z0-9A-Z]+$" : {
            "description": "A single reference associated with a basis set",
            "type": "object",
            "additionalProperties": false,
            "required" : [ "_entry_type" ],
            "properties": {
                "_entry_type" : {
                    "type" : "string",
                    "enum": [ "article", "techreport", "misc", "unpublished", "phdthesis", "book", "incollection", "dataset" ]
                },
                "title" : { "type": "string" },
                "doi" : { "type": "string" },
                "authors" : {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "string"
                    }
                },
                "editors" : {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "string"
                    }
                },
                "journal" : { "type" : "string" },
                "type" : { "type" : "string" },
                "pages" : { "type" : "string" },
                "volume" : { "type" : "string" },
                "year" : { "type" : "string" },
                "publisher" : { "type" : "string" },
                "series" : { "type" : "string" },
                "booktitle" : { "type" : "string" },
                "isbn" : { "type" : "string" },
                "institution" : { "type" : "string" },
                "school" : { "type" : "string" },
                "number" : { "type" : "string" },
                "address" : { "type" : "string" },
                "note" : { "type" : "string" }
            }
        }
    }
}
